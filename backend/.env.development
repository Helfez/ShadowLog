# Server Configuration
PORT=3001
NODE_ENV=development

# Database (using PostgreSQL container for development)
DATABASE_URL="postgresql://shadowlog:dev123@localhost:5432/shadowlog"

# JWT Secret (development only)
JWT_SECRET=dev-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OpenAI Configuration (需要真实的API key)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Redis Configuration (optional for development)
REDIS_URL=redis://localhost:6379

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Features
AI_SENTIMENT_ENABLED=true
AI_TAGS_ENABLED=true
AI_WRITING_ASSIST_ENABLED=true
AI_CACHE_TTL=3600
